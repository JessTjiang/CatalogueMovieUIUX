<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Search.DetailMovie">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="270dp"
            android:src="@drawable/ic_image_black_24dp"
            android:id="@+id/poster_movie"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_judul_film"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul Film"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/bintang"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/tv_tanggal_masuk"
                android:src="@drawable/ic_star_black_24dp" />

            <TextView
                android:id="@+id/rating_pemirsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2500 viewers"
                android:layout_below="@id/tv_tanggal_masuk"
                android:layout_toRightOf="@id/bintang"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_tanggal_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17-08-1997"
                android:textSize="18sp"
                android:layout_below="@id/tv_judul_film"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_deskripsi_film"
                android:layout_below="@id/bintang"
                android:text="Isi Deskripsi"
                android:textSize="15sp"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>